        import sqlite3
        from datetime import datetime
        consor = sqlite3.connect("C:\dbases\drifa.db")
        cursorsor = consor.cursor()
        cursor2 = consor.cursor()
        cant = "SELECT COUNT(*) FROM sorteo"
        cdatos = cursor2.execute(cant)
        cuenta = cursor2.fetchone()[0]
        cuenta = cuenta + 1
        no_duplicados = f"SELECT * FROM sorteo WHERE usuario='{tgs}'"
        cursor = consor.cursor()    
        cursor.execute(no_duplicados)
        lee = cursor.fetchall()
        for row in lee:
            if row[1] == tgs:
                bot.reply_to(m, "ğŸš« This user is already participating. <b>\n\nOnly one entry per person is allowed!</b>"  , parse_mode="HTML")                    
                return
        registrar = f"INSERT INTO sorteo(orden, usuario) VALUES ('{cuenta}', '{tgs}')" 
        cursorsor.execute(registrar)
        consor.commit()
        consor.close
        bot.reply_to(m,f"ğŸ€Welcome!\n\nâ™¦ï¸ You are one of the<b> {cuenta} </b>users who are participating and your username to participate is <b>{tgs}\n\n</b>ğŸ€<b>Good luck!!</b>ğŸ€" , parse_mode="html")
